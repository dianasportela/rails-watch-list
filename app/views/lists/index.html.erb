<div class="container">
  <h1>Movie lists</h1>
  <div class="row">
  <h2>Your lists</h2>
    <div class="col-4">
      <div class="card">
        <% @lists.each do |list| %>
          <%= link_to list_path(list) do %>
            <%= list.name %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row justify-content">
    <div class="col-6">
      <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
    </div>
  </div>
</div>
